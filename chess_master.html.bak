            text-decoration: none;
            z-index: 100;
            font-size: 0.9em;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .game-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            padding: 20px;
            width: 100%;
            max-width: 600px;
        }

        .status-bar {
            width: 100%;
            background: rgba(0, 0, 0, 0.8);
            padding: 15px;
            border-radius: 15px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 2px solid rgba(212, 175, 55, 0.3);
        }

        .turn-indicator {
            font-size: 1.2em;
            font-weight: bold;
        }

        .score {
            font-size: 1em;
        }

        .chess-board {
            display: grid;
            grid-template-columns: repeat(8, 1fr);
            gap: 0;
            border: 5px solid #8b4513;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
            aspect-ratio: 1;
            width: min(90vw, 600px);
        }

        .cell {
            aspect-ratio: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: clamp(30px, 8vw, 60px);
            cursor: pointer;
            position: relative;
            transition: all 0.2s;
        }

        .cell.light {
            background: #f0d9b5;
        }

        .cell.dark {
            background: #b58863;
        }

        .cell.selected {
            background: #7fa650 !important;
            box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.3);
        }

        .cell.valid-move {
            background: #9bb874 !important;
        }

        .cell.valid-move::after {
            content: '';
            width: 30%;
            height: 30%;
            background: rgba(0, 0, 0, 0.2);
            border-radius: 50%;
            position: absolute;
        }

        .cell:hover {
            filter: brightness(1.1);
        }

        .piece {
            cursor: pointer;
            transition: transform 0.2s;
        }

        .piece:hover {
            transform: scale(1.1);
        }

        .captured {
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
            min-height: 40px;
        }

        .hidden {
            display: none;
        }

        .score-display {
            font-size: 3em;
            margin: 20px 0;
            color: #ffd700;
            text-shadow: 0 0 20px #ffd700;
        }

        .message {
            font-size: 1.2em;
            margin: 20px 0;
            color: #d4af37;
        }
    </style>
